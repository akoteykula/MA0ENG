<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_account_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- 2. Illustration -->
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="321dp"
        android:layout_height="251dp"
        android:layout_marginStart="52dp"
        android:contentDescription="Illustration"
        android:src="@drawable/illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- 3. Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textSize="45sp"
        android:textStyle="bold"
        android:fontWeight="700"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        android:textFontWeight="1000"
        app:layout_constraintTop_toTopOf="@id/illustration"
        app:layout_constraintBottom_toBottomOf="@id/illustration"
        app:layout_constraintStart_toStartOf="@id/illustration"
        app:layout_constraintEnd_toEndOf="@id/illustration" />

    <!-- 4. Secondary Text -->
    <TextView
        android:id="@+id/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by creating a free account."
        android:textSize="16sp"
        android:textFontWeight="1000"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintStart_toStartOf="@id/welcome_text"
        app:layout_constraintEnd_toEndOf="@id/welcome_text"
        android:layout_marginTop="8dp" />

    <!-- 5. Full Name Input Field -->
    <EditText
        android:id="@+id/full_name_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Full Name"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textPersonName"
        android:drawableEnd="@drawable/ic_person"
        android:drawablePadding="8dp"
        android:drawableTint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="250dp" />

    <!-- 6. Email Input Field -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Valid email"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textEmailAddress"
        android:drawableEnd="@drawable/ic_mail"
        android:drawablePadding="8dp"
        android:drawableTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/full_name_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 7. Phone Number Input Field -->
    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Phone number"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="phone"
        android:drawableEnd="@drawable/ic_phone"
        android:drawablePadding="8dp"
        android:drawableTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 8. Password Input Field -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Strong Password"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:drawableTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/phone_number_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 9. Terms and Conditions Checkbox -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/additional_options"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp">

        <CheckBox
            android:id="@+id/terms_conditions_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By checking the box you agree to our Terms and Conditions."
            android:textSize="10sp"
            android:textFontWeight="1000"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 10. Button Next -->
    <LinearLayout
        android:id="@+id/next_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/next_button_background"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/additional_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/next_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textFontWeight="1000"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/next_button_arrow"
            android:layout_width="15dp"
            android:layout_height="22dp"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <!-- 11. Footer (Login Link) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Text for "Already a member?" -->
        <TextView
            android:id="@+id/already_member_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member?"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/login_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontalBias="0.5" />

        <!-- Text for "Log In" -->
        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textSize="14sp"
            android:textColor="#800080"
            android:textFontWeight="1000"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@id/already_member_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontalBias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
