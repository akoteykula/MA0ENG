<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_account_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/illustration"
        android:layout_width="321dp"
        android:layout_height="251dp"
        android:layout_marginStart="52dp"
        android:contentDescription="Illustration"
        android:src="@drawable/illustration"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back,"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 4. Secondary Text -->
    <TextView
        android:id="@+id/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to access your account"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Enter your email"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textEmailAddress"
        android:drawableEnd="@drawable/ic_mail"
        android:drawableTint="@color/gray_secondary"
        app:layout_constraintTop_toBottomOf="@id/secondary_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/ic_lock"
        android:drawableTint="@color/gray_secondary"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp" />

    <LinearLayout
        android:id="@+id/additional_options"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/password_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp">

        <CheckBox
            android:id="@+id/remember_me_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_regular" />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="12sp"
            android:textColor="@color/blue_link"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="end"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Next"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/montserrat_regular"
        android:drawableEnd="@drawable/arrow"
        android:drawableTint="@android:color/white"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/additional_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Member? Register now"
        android:textSize="14sp"
        android:textColor="@color/blue_link"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="97dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
